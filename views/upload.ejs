<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Chef Creations</title>
    <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon">

    <style type="text/css" media="all">
      @import "/text_editor/css/info.css";
      @import "/text_editor/css/main.css";
      @import "/text_editor/css/widgEditor.css";
    </style>
    <script type="text/javascript" src="/text_editor/scripts/widgEditor.js"></script>
    

    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <script type="text/javascript" src="//code.jquery.com/jquery-3.6.0.min.js"></script>
    <script type="text/javascript" src="cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/css/index.css">
</head>
  <body>
    
    <%- include('partials/navbar') %>


<div class="formStyle addNewitem">
  <form action="/submit?_csrf=<%= csrfToken %>" method="post" enctype="multipart/form-data">
 

    <div class="form-floating mb-3">
      <input type="text" class="form-control" id="floatingInput" name="postTitle" style="background-color: white; border-color: black;">
      <label for="floatingInput">TITLE</label>
    </div>
    <div class="mb-3">
      <input class="form-control" type="file" id="formFile"  name="postImage"  style="background-color: white; border-color: black;">
    </div>
    <div class="form-floating mb-3">
      <input type="text" class="form-control" id="floatingInput" name="postAbout" style="background-color: white; border-color: black;">
      <label for="floatingInput">ABOUT DISH IN 200 WORDS</label>
    </div>
    <label for="floatingInput">TEXT</label>
    <div class="form-floating mb-3">
      
      
      <textarea id="noise" name="postText" class="widgEditor nothing"></textarea>
      <!--<textarea name="postText"  id="summernote" cols="70" rows="10" style="background-color: white; border-color: black; padding-top: 50px;"></textarea>
      -->
    </div>
    <label for="floatingSelect">Choose One Categories For Food Item</label>
    <select name="category" class="form-select" id="floatingSelect" aria-label="Floating label select example" style="margin: 20px 0;">
      <option selected value="Indian">Indian</option>
      <option value="Italian">Italian</option>
      <option value="Chinese">Chinese</option>
      <option value="Korean">Korean</option>
      <option value="Other">Other</option>
    </select>
    
    
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <button type="submit" class="btn btn-primary">SUBMIT</button>
      
  </form>
</div>
   





  <script>
      $('#summernote').summernote({
        placeholder: 'Hello Bootstrap 5',
        tabsize: 2,
        height: 100
      });
    </script>


</body>
</html>